<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.tiledPanelMain {
			border: 1px solid #415A67;
			background: #EEEAE1;
			color: #415A67;
			padding: 15px;
			position: absolute;
		}
		
		.tiledPanelTitle {
			border-bottom: 1px solid #415A67;
			padding-bottom: 10px;
		}
		
		.tiledPanelContent {
			background: #FFFFFF;
		}
	</ui:style>

	<g:VerticalPanel addStyleNames="{style.tiledPanelMain}">
		<g:HTMLPanel>
			<h2 ui:field="titleElement" class="{style.tiledPanelTitle}" />
		</g:HTMLPanel>
		<g:ScrollPanel ui:field="scrollPanel" addStyleNames="{style.tiledPanelContent}">
			<g:FlowPanel ui:field="contentPanel"></g:FlowPanel>
		</g:ScrollPanel>
	</g:VerticalPanel>

</ui:UiBinder>