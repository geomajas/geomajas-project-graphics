<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:org.geomajas.graphics.client.util.textbox">

	<g:HTMLPanel>
		<table>
			<tr>
				<td>
					<g:Label>Text:</g:Label>
				</td>
				<td>
					<g:TextArea ui:field="labelBox"></g:TextArea>
				</td>
			</tr>
			<tr>
				<td>
					<g:Label>Color:</g:Label>
				</td>
				<td class="textBoxCell">
					<w:ColorTextBoxValidator ui:field="fillColorValidator"/>
				</td>
				<td>
					<g:Button ui:field="fillColorButton">...</g:Button>
				</td>
			</tr>
			<tr>
				<td>
					<g:Label>Size:</g:Label>
				</td>
				<td colspan="2">
					<g:TextBox ui:field="fontSize"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>
					<g:Label>Font Family:</g:Label>
				</td>
				<td colspan="2">
					<g:TextBox ui:field="fontFamily"></g:TextBox>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>

</ui:UiBinder>