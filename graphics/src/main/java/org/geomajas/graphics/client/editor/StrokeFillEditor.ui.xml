<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:org.geomajas.graphics.client.util.textbox"
	xmlns:i="urn:import:org.geomajas.graphics.client.widget">

	<g:HTMLPanel>
		<table>
			<tr class="strokeRow">
				<td colspan="3" class="captionPopup">
					<g:Label ui:field="strokeLabel"/>
				</td>
			</tr>
			<tr class="strokeRow">
				<td>
					<g:Label>Width:</g:Label>
				</td>
				<td>
					<w:TextBoxEditorDecorator ui:field="strokeWidthBoxDecorator">
							<w:valuebox>
								<g:TextBox ui:field="strokeWidthBox"/>
							</w:valuebox>
					</w:TextBoxEditorDecorator>
				
				</td>
				<td></td>
			</tr>
			<tr class="strokeRow">
				<td>
					<g:Label>Color:</g:Label>
				</td>
				<td class="textBoxCell">
					<g:TextBox ui:field="strokeColorBox"></g:TextBox>
				</td>
				<td>
					<g:Button ui:field="strokeColorButton">...</g:Button>
				</td>
			</tr>
			<tr class="opacityRow strokeRow">
				<td>
					<g:Label>Transparency:</g:Label>
				</td>
				<td colspan="2" class="transparencySliderCell"> 
					<i:TransparencySliderBar ui:field="strokeOpacitySlider"></i:TransparencySliderBar>
				</td>
			</tr>
			<tr class="fillRow strokeRow">
				<td colspan="3" class="lineCell">
				</td>
			</tr>
			<tr class="fillRow">
				<td colspan="3" class="captionPopup">
					<g:Label ui:field="fillLabel"/>
				</td>
			</tr>
			<tr class="fillRow">
				<td>
					<g:Label>Color:</g:Label>
				</td>
				<td class="textBoxCell">
					<g:TextBox ui:field="fillColorBox"></g:TextBox>
				</td>
				<td>
					<g:Button ui:field="fillColorButton">...</g:Button>
				</td>
			</tr>
			<tr class="opacityRow fillRow">
				<td>
					<g:Label>Transparency:</g:Label>
				</td>
				<td colspan="2" class="transparencySliderCell">
					<i:TransparencySliderBar ui:field="fillOpacitySlider"></i:TransparencySliderBar>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>

</ui:UiBinder>